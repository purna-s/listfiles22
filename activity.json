{
  "name": "listfiles22",
  "version": "0.0.1",
  "type": "flogo:activity",
  "ref": "github.com/purna-s/listfiles22",  
  "title": "listfiles22",
  "description": "Lists all the files in the directory",
  "author": "Purna S <purna.sadanala@prowesssoft.com>",

  "inputs":[
    
	{
      "name": "Path",
      "type": "string",
      "required": true
    },
	{
      "name": "SubDirectories[Y/N]",
      "type": "string",
      "required": true
    }
  ],
  "outputs": [
    {
      "name": "FileName",
      "type": "string"
    },
	{
      "name": "Directory",
      "type": "string"
    },
	{
      "name": "Extension",
      "type": "string"
    },
	{
      "name": "Size",
      "type": "string"
    },
	{
      "name": "ModTime",
      "type": "string"
    },
	{
      "name": "MinutesDiff",
      "type": "int"
    }
  ]
}
